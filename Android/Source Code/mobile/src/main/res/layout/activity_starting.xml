<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/blue50"
    tools:context="com.github.teamasia.heartrider.StartingActivity">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:background="@drawable/rollercoaster"
        android:layout_below="@+id/e_and_r"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Heart "
        android:textColor="#FF0000"
        android:id="@+id/heart"
        android:textSize="80dp"
        android:textStyle="bold"
        android:layout_alignLeft="@+id/e_and_r"
        android:layout_marginTop="65dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rider"
        android:id="@+id/rider"
        android:textColor="#000000"
        android:textSize="80dp"
        android:textStyle="bold"
        android:layout_alignRight="@+id/e_and_r"
        android:layout_marginTop="65dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Educate and Ride"
        android:id="@+id/e_and_r"
        android:textColor="#000000"
        android:textSize="60dp"
        android:fontFamily="Arial"
        android:textStyle="italic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="       Enter        "
        android:id="@+id/enter"
        android:textColor="@color/blue50"
        android:background="@color/blue800"
        android:textSize="80dp"
        android:fontFamily="Comic Sans"
        android:layout_alignBottom="@+id/imageView"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
