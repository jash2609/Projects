<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/blue50"
    tools:context="com.github.teamasia.heartrider.FinishMedicalActivity">

    <TextView android:text="@string/help_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/blue900"
        android:textSize="45dp"
        android:textStyle="bold"
        android:id="@+id/help_title"
        android:layout_marginTop="30dp"/>

    <TextView android:text="@string/help_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/help_content"
        android:textColor="@color/blue800"
        android:textSize="22dp"
        android:layout_below="@+id/help_title"
        android:layout_marginTop="30dp"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="      GOT IT      "
        android:id="@+id/help_done"
        android:background="@color/blue900"
        android:textColor="@color/blue50"
        android:textSize="45sp"
        android:textStyle="bold"
        android:layout_above="@+id/textView9"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/help_content"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
